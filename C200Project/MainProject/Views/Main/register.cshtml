<style>
    .body {
        background-image: linear-gradient(150deg,#FFFFFF,#DDF3FB);
        height: 100vh;
        width: 100%;
    }

    h1 {
        font-family: Segoe Print;
        text-align: center;
    }

    .form-group {
        font-family: MV Boli;
        text-align: right;
    }
</style>
<body class="body">

    @model UserDetails
    <div class="container">
        <form asp-controller="Main"
              asp-action="register"
              
              method="post"
              enctype="multipart/form-data">
            <h1>Registration</h1>
            <div class="form-group row">
                <img src="~/images/logo.png" height="300px" width="300px" />

                <div class="col-md-7">
                    <div class="form-group row">
                        <label asp-for="UserName" class="control-label col-md-3">Name: </label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" asp-for="UserName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="control-label col-md-3">Email: </label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" asp-for="Email" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="control-label col-md-3">Password: </label>
                        <div class="col-md-6">
                            <input type="password" class="form-control" asp-for="Password" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="control-label col-md-3" asp-for="Image">Image :</label>
                        <div class="col-md-6">
                            <input type="file" asp-for="Image" class="form-control-file" />
                        </div>
                    </div>

                    <div class="form-group row" style="text-align:left">
                        <div class="col-md-6 offset-md-3">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </div>
                    @if (ViewData["Message"] != null)
                    {
                        <div class="form-group row" style="text-align:left">
                            <div class="col-md-6 offset-md-3">
                                @if (ViewData["Message"] != null)
                                {
                                    <div class="alert alert-@ViewData["MsgType"]">
                                        @ViewData["Message"]
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="form-group row" style="text-align:left">
                        <div class="offset-md-3 col-md-6" style="font-family: Kristen ITC">
                            <input type="submit" class="btn btn-primary" value="Register" />
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</body>